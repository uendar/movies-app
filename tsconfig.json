{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    // TODO: Remove this when the codebase is all TS
    "noImplicitAny": false,
    "allowJs": true, // allows both a TypeScript and JavaScript codebase,
    "paths": {
      "@routes/*": ["src/app/routes/*"]
    }
  },

  "include": ["./src", "./src/*.d.ts"]
}
